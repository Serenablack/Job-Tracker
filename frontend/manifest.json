{
  "manifest_version": 3,
  "name": "Job Tracker Extension",
  "version": "1.0.0",
  "description": "Track jobs directly from job boards to Google Sheets.",
  "action": {
    "default_title": "Job Tracker"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "743095772920-tqchjabfajj7lns8apa76s8pi1g29bi4.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "permissions": ["identity", "storage", "activeTab", "scripting", "sidePanel"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
